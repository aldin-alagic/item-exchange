@model IEnumerable<ItemExchange.Models.Expense>

@{
    ViewData["Title"] = "Expenses";
}

<div class="container p3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My expenses</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-area="" asp-controller="Expense" asp-action="Create">Add expense</a>
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr class="d-flex">
                    <th class="col-6">Expense type</th>
                    <th class="col-3">Amount</th>
                    <th class="col-3"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr class="d-flex" data-rowId="@expense.Id">
                        <td class="col-6">@expense.Type</td>
                        <td class="col-3">@expense.Amount</td>
                        <td class="col-3 text-center">
                            <a class="text-primary mr-2" asp-action="Update" asp-route-Id="@expense.Id">
                                <i class="fas fa-pen fa-lg"></i>
                            </a>
                            <a class="delete-btn text-danger" data-toggle="modal" data-target="#deleteModal" data-id="@expense.Id">
                                <i class="fas fa-trash-alt fa-lg"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <form class="delete-form" method="post" asp-action="Delete">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Delete expense</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Are you sure that you want to delete this expense?
                            <input type="hidden" name="id">
                        </div>
                    </form>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="button" class="confirm-delete-btn btn btn-danger" data-dismiss="modal">Delete</button>
                    </div>
                </div>
            </div>
        </div>

    }
    else
    {
        <p>No expenses created</p>
    }
</div>

@section Scripts {
    <script>
        $(".delete-btn").on("click", function () {
            const id = $(this).data("id");
            $(".confirm-delete-btn").attr("data-id", id);
        });

        $(".confirm-delete-btn").on("click", function () {
            const id = $(this).data("id");
            $("[name=id]").val(id);
            $(".delete-form").submit();
            /*$.post('Expense/Delete/' + id, function () {
                //$(`[data-rowid="${id}"]`).remove();
                location.reload();
            });*/
        });
    </script>
}
