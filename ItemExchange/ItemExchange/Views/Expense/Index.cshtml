@model IEnumerable<ItemExchange.Models.Expense>

@{
    ViewData["Title"] = "Expenses";
}

<div class="container p3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My expenses</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-area="" asp-controller="Expense" asp-action="Create">Add expense</a>
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Expense type</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var expense in Model)
                {
                    <tr>
                        <td class="col-6">@expense.Type</td>
                        <td class="col-6">@expense.Amount</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No expenses created</p>
    }
</div>