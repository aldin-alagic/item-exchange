@model IEnumerable<ItemExchange.Models.Item>

@{
    ViewBag.Title = "Items";
}

<div class="container p3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Borrowed Items List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-area="" asp-controller="Item" asp-action="Create">Add item</a>
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Item name</th>
                    <th>Borrower</th>
                    <th>Lender</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td class="col-4">@item.Name</td>
                        <td class="col-4"></td>
                        <td class="col-4"></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created</p>
    }

</div>